{
  "routes": [
    {
      "route": "/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "methods": ["GET"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/styles.css", "/script.js", "/*.{css,js,jpg,jpeg,png,gif,svg,ico,woff,woff2,ttf,eot}"]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self'",
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".css": "text/css",
    ".js": "text/javascript",
    ".html": "text/html"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
